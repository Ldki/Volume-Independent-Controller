{
  "manifest_version": 3,
  "name": "分頁音量控制器",
  "version": "2.9.1",
  "description": "控制當前分頁的音量，支持最高600%音量，帶有視頻獨立記憶和設定管理功能",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "分頁音量控制",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "increase-volume": {
      "suggested_key": {
        "default": "Alt+Up",
        "mac": "Alt+Up"
      },
      "description": "增加音量"
    },
    "decrease-volume": {
      "suggested_key": {
        "default": "Alt+Down",
        "mac": "Alt+Down"
      },
      "description": "降低音量"
    },
    "toggle-mute": {
      "suggested_key": {
        "default": "Alt+M",
        "mac": "Alt+M"
      },
      "description": "切换静音"
    },
    "reset-volume": {
      "suggested_key": {
        "default": "Alt+Left",
        "mac": "Alt+Left"
      },
      "description": "重置音量"
    }
  }
}
